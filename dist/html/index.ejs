<!DOCTYPE html>
<html lang="en" class="openNav">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://unpkg.com/ionicons@4.4.4/dist/css/ionicons.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Raleway:300,400,500,700" rel="stylesheet">
    <title>Blogs - Blogify V1</title>
<link href="../css/main.css" rel="stylesheet"></head>
<body>

    <!-- INCLUDING SIDE NAVIGATION -->
    <% include ./ejs-partials/navigation.ejs %>        

    <div class="new-wrapper">
        <section class="blogs">
            <div class="blogs-wrapper">
                <% blogs.forEach(blog => { %>
                    <div class="blog-post">
                        <div class="image-content">
                            <img src="<%= blog.image %>" heigth="100%" width="100%" class="image-content__image" style = "text-align: center;">
                            <div class="image-content__created-by">
                                <p class="image-content__text">Posted By</p>
                                <h3 class="image-content__user">AndreasDEV</h3>
                            </div>
                        </div>
                        <div class="blog-post__content">
                            <a href="/blogs/<%= blog._id %>"><h2 class="blog-post__content__title"><%= blog.title %></h2></a>
                            <p class="blog-post__content__short-desc"><%= blog.body.substring(0, 150) %>..</p>
                            <div class="blog-post__content__flairs">
                                <a href='' class="flair"><%= blog.flair %></a>
                            </div>
                            <div class="divider">&nbsp;</div>
                            <div class="blog-post__content__bottom">
                                <h4 class="blog-post__content__date"><%= blog.created.toDateString() %></h4>
                                <div class="blog-post__content__icons">
                                    <span>6<i class="icon ion-ios-chatbubbles"></i></span>
                                    <span>16<i class="icon ion-ios-heart"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </section>
    </div>

<script type="text/javascript" src="../js/bundle.js"></script></body>
</html>